<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projecttest.StudentController">
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Student Dashboard" />
    <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-padding: 20px; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
        <Button onAction="#handleViewProfile" style="-fx-font-size: 16px; -fx-pref-width: 300px; -fx-pref-height: 40px; -fx-background-color: #2196F3; -fx-text-fill: white;" text="View Profile" />
      <Button layoutX="30.0" layoutY="30.0" onAction="#handleViewSubject" style="-fx-font-size: 16px; -fx-pref-width: 300px; -fx-pref-height: 40px; -fx-background-color: #2196F3; -fx-text-fill: white;" text="View Subjects" />
        <Button onAction="#handleViewCourses" style="-fx-font-size: 16px; -fx-pref-width: 300px; -fx-pref-height: 40px; -fx-background-color: #2196F3; -fx-text-fill: white;" text="View Enrolled Courses" />
        <Button onAction="#handleViewGrades" style="-fx-font-size: 16px; -fx-pref-width: 300px; -fx-pref-height: 40px; -fx-background-color: #2196F3; -fx-text-fill: white;" text="View Grades" />
        <Button onAction="#handleRegisterEvents" style="-fx-font-size: 16px; -fx-pref-width: 300px; -fx-pref-height: 40px; -fx-background-color: #2196F3; -fx-text-fill: white;" text="Register for Events" />
        <Button onAction="#handleLogout" style="-fx-font-size: 16px; -fx-pref-width: 300px; -fx-pref-height: 40px; -fx-background-color: #f44336; -fx-text-fill: white;" text="Logout" />
        <!-- Add errorLabel -->
        <Label fx:id="errorLabel" style="-fx-text-fill: red; -fx-font-size: 14px;" />
    </VBox>
</VBox>
