<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projecttest.LoginController" style="-fx-background-color: #f4f4f4;">
    <Label text="University Management System" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
    <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-padding: 20px; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
        <Label text="Login" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #555555;" />
        <TextField fx:id="usernameField" promptText="Username" style="-fx-font-size: 16px; -fx-pref-width: 300px; -fx-pref-height: 40px;" />
        <PasswordField fx:id="passwordField" promptText="Password" style="-fx-font-size: 16px; -fx-pref-width: 300px; -fx-pref-height: 40px;" />
        <Button text="Login" onAction="#handleLogin" style="-fx-font-size: 16px; -fx-pref-width: 300px; -fx-pref-height: 40px; -fx-background-color: #4CAF50; -fx-text-fill: white;" />
        <Label fx:id="errorLabel" style="-fx-text-fill: red; -fx-font-size: 14px;" />
    </VBox>
</VBox>