<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projecttest.AdminController" style="-fx-background-color: #f4f4f4;">
    <Label text="Admin Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
    <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-padding: 20px; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
        <Button text="Manage Subjects" onAction="#handleManageSubjects" style="-fx-font-size: 16px; -fx-pref-width: 300px; -fx-pref-height: 40px; -fx-background-color: #2196F3; -fx-text-fill: white;" />
        <Button text="Manage Courses" onAction="#handleManageCourses" style="-fx-font-size: 16px; -fx-pref-width: 300px; -fx-pref-height: 40px; -fx-background-color: #2196F3; -fx-text-fill: white;" />
        <Button text="Manage Students" onAction="#handleManageStudents" style="-fx-font-size: 16px; -fx-pref-width: 300px; -fx-pref-height: 40px; -fx-background-color: #2196F3; -fx-text-fill: white;" />
        <Button text="Manage Faculty" onAction="#handleManageFaculty" style="-fx-font-size: 16px; -fx-pref-width: 300px; -fx-pref-height: 40px; -fx-background-color: #2196F3; -fx-text-fill: white;" />
        <Button text="Manage Events" onAction="#handleManageEvents" style="-fx-font-size: 16px; -fx-pref-width: 300px; -fx-pref-height: 40px; -fx-background-color: #2196F3; -fx-text-fill: white;" />
        <Button text="Logout" onAction="#handleLogout" style="-fx-font-size: 16px; -fx-pref-width: 300px; -fx-pref-height: 40px; -fx-background-color: #f44336; -fx-text-fill: white;" />
        <!-- Add errorLabel -->
        <Label fx:id="errorLabel" style="-fx-text-fill: red; -fx-font-size: 14px;" />
    </VBox>
</VBox>